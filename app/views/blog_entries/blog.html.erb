<!-- Content Container Start -->
<div class="content-container">
    
    <!-- Title Container Start -->
    <div class="title-content-container">
        <%= image_tag "blog-icon.png", :class => "title-logo", :id => "blog-title-logo" %>
        <h1 class="title-header" id="blog-title-header">Blog.<span class="title-bar-span">|</span></h1>
    </div>
    <!-- Title Container End -->
    
    <!-- Toolbar -->
    <% if logged_in? and is_admin? %>
    <%= render "new-blog-entry" %>
    <% end %>
    <!-- Toolbar End -->
    
    <!-- Blog Entries Start -->
    <ul class="blog-entry-list">
      <%= render @blog_entries %>
    </ul>
    <!-- Blog Entries End -->
    
</div>
<!-- Content Container End -->