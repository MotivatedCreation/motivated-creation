<!DOCTYPE html>
<html>
  <head>
    <title><%= fullTitle(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- Navigationbar Menu Start !-->
      <div class="navbar-menu">
        <ul class="navbar-menu-list">
          <li class="navbar-menu-item">
            <a id="clients-navbar-menu-item-link" href="clients">
              <%= image_tag "clients-icon.png", :class => "navbar-menu-item-image" %>
              Clients
            </a>
          </li>
          <li class="navbar-menu-item">
            <a id="partners-navbar-menu-item-link" href="partners">
              <%= image_tag "partners-icon.png", :class => "navbar-menu-item-image" %>
              Partners
            </a>
          </li>
          <li class="navbar-menu-item">
            <a id="portfolio-navbar-menu-item-link" href="portfolio">
              <%= image_tag "portfolio-icon.png", :class => "navbar-menu-item-image" %>
              Portfolio
            </a>
          </li>
          <li class="navbar-menu-item">
            <a id="inquiry-navbar-menu-item-link" href="inquiry">
              <%= image_tag "inquiry-icon.png", :class => "navbar-menu-item-image" %>
              Inquiry
            </a>
          </li>
          <li class="navbar-menu-item">
            <a id="reviews-navbar-menu-item-link" href="reviews">
              <%= image_tag "reviews-icon.png", :class => "navbar-menu-item-image" %>
              Reviews
            </a>
          </li>
          <li class="navbar-menu-item">
            <a id="shop-navbar-menu-item-link" href="shop">
              <%= image_tag "shop-icon.png", :class => "navbar-menu-item-image" %>
              Shop
            </a>
          </li>
      </ul>
    </div>
    <!-- Navigationbar Menu End !-->
      
    <!-- Container Start !-->
    <div class="page-container">
      
      <!-- Navigationbar Start !-->
      <navbar class="navbar">
        <ul class="navbar-list">
          <% if not @viewing_home_page %>
            <li class="navbar-item" id="home-navbar-item">
              <a id="home-navbar-item-link" href="home">Motivated Creation</a>
            </li>
          <% end %>
          <% if not @logged_in %>
            <li class="navbar-item" id="authentication-navbar-item">
              <%= image_tag "email-icon.png", :class => "navbar-item-image" %>
              <input class="email-input-text" type="text" placeholder="email"> </input>
              <input class="password-input" type="password" placeholder="password"> </input>
            </li>
          <% end %>
          <li class="navbar-item" id="menu-navbar-item">
            <a href="javascript:void(0);" onclick="toggleNavbarMenu()">&#9776;</a>
          </li>
        </ul>
      </navbar>
      <!-- Navigationbar End !-->
      
      <!-- Page Content Start !-->
        <%= yield %>
      <!-- Page Content End !-->
      
      <!-- Footer Start !-->
      <ul class="footer">
        <li class="footer-item">
          <a href="contact">Contact</a>
        </li>
        <li class="footer-item">
          Copyright Â© 2017 Motivated Creation, LLC. All rights reserved.
        </li>
      </ul>
      <!-- Footer End !-->
        
    </div>
    <!-- Container End !-->
  </body>
</html>
