/* global document */

var showingSignupModal = <%= shouldToggle %>;

$(document).ready(function()
{
    toggleSignupModal();
    
    $("#signup-modal-button-close").on("click", function() {
        toggleSignupModal();
    });
});

function toggleSignupModal()
{
    if (showingSignupModal) {
        openModal('#signup-modal', '62px');
    }
    else {
        closeModal('#signup-modal', '-305px');
    }
    
    toggleAuthenticationPopover();
    
    showingSignupModal = !showingSignupModal;
}