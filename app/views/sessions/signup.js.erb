/* global document */

var showSignupModal = false

$(document).ready(function()
{
    toggleSignupModal();
    
    $("#signup-modal-button-close").on("click", function() {
        toggleSignupModal();
    });
});

function toggleSignupModal()
{
    showSignupModal = !showSignupModal;
    
    if (showSignupModal)
    {
        openModal('#signup-modal', '62px');
    }
    else {
        closeModal('#signup-modal', '-305px');
    }
    
    toggleAuthenticationPopover();
}