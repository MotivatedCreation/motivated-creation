/* global document */
/* global openModal */
/* global closeModal */
/* global toggleAuthenticationPopover */

var showingSignupModal = false

$(document).ready(function()
{
    showingSignupModal = !($('#signup-modal').position().top == 62 ? true : false);
    toggleSignupModal(showingSignupModal);
    
    $("#signup-modal-button-close").on("click", function()
    {
        showingSignupModal = false;
        toggleSignupModal(showingSignupModal);
    });
});

function toggleSignupModal(shouldToggle)
{
    if (shouldToggle) {
        openModal('#signup-modal', '62px');
    }
    else {
        closeModal('#signup-modal', '-305px');
    }
    
    toggleAuthenticationPopover(!shouldToggle);
}