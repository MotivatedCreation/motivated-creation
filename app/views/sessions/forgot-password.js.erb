/* global document */
/* global openModal */
/* global closeModal */
/* global toggleAuthenticationPopover */

var showingForgotPasswordModal = <%= shouldToggle %>;

$(document).ready(function()
{
    toggleForgotPasswordModal();
    
    $("#forgot-password-modal-button-close").on("click", function() {
        toggleForgotPasswordModal();
    });
});

function toggleForgotPasswordModal()
{
    if (showingForgotPasswordModal) {
        openModal('#forgot-password-modal', '62px');
    }
    else {
        closeModal('#forgot-password-modal', '-180px');
    }
    
    toggleAuthenticationPopover();
    
    showingForgotPasswordModal = !showingForgotPasswordModal;
}