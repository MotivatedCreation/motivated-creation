/* global document */
/* global openModal */
/* global closeModal */
/* global toggleAuthenticationPopover */

var showingForgotPasswordModal = false

$(document).ready(function()
{
    showingForgotPasswordModal = !($('#forgot-password-modal').position().top == 62 ? true : false);
    toggleForgotPasswordModal(showingForgotPasswordModal);
    
    $("#forgot-password-modal-button-close").on("click", function()
    {
        showingForgotPasswordModal = false;
        toggleForgotPasswordModal(showingForgotPasswordModal);
    });
});

function toggleForgotPasswordModal(shouldToggle)
{
    if (shouldToggle) {
        openModal('#forgot-password-modal', '62px');
    }
    else {
        closeModal('#forgot-password-modal', '-180px');
    }
    
    toggleAuthenticationPopover(!shouldToggle);
}